<div class="container">
    <h1>Edita el equipo</h1>
    <form class="container" action='/{{data.id}}/editar?_method=PUT' method="POST" enctype="multipart/form-data" >
       
         <div class="mb-3">
            <label for="formGroupExampleInput" class="form-label">Nombre</label>
            <input type="text" name="nombre" value="{{data.name}}" class="form-control" id="formGroupExampleInput" placeholder="Boca Juniors" required>
        </div>
      <div class="mb-3">
             <label for="formGroupExampleInput2" class="form-label">Pais</label>
            <input type="text" class="form-control" value="{{data.area.name}}" name="pais" id="formGroupExampleInput2" placeholder="Argentina" required>
        </div>
         <div class="mb-3">
             <label for="formGroupExampleInput2" class="form-label">Fundacion</label>
            <input type="text" class="form-control" value="{{data.founded}}" name="fundacion" id="formGroupExampleInput2" placeholder="1905" required>
        </div>
        <div class="mb-3">
             <label for="formGroupExampleInput2" class="form-label">Ubicaci√≥n equipo</label>
            <input type="text" class="form-control" value="{{data.address}}" name="ubicacion" id="formGroupExampleInput2" placeholder="La boca" required>
        </div>
          <div class="input-group mb-3">
            <label class="input-group-text" for="inputGroupFile01">Imagen</label>
            <input type="file" name="imagen"  class="form-control" id="inputGroupFile01" >
        </div>
        <input type="submit"  class="btn btn-primary">
        <a class="btn btn-danger" href="/" role="button">Cancelar</a>
    </form>

</div>