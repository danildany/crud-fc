<table class="table table-hover">
   <thead class="bg-light">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Nombre</th>
      <th scope="col">Pais</th>
      <th scope="col">Manejar</th>
    </tr>
  </thead>
  <tbody class="bg-secondary">
    {{#each items as |item|}}
    <tr>
      <th scope="row">{{item.id}}</th>
      <td>{{item.name}}</td>
      <td>{{item.area.name}}</td>
      <td>
       <a href='{{item.name}}/{{item.id}}/leer'><button type="button" class="btn btn-info"><i class="fas fa-eye"></i></button></a> 
       <a  class="btn btn-success" href='/{{item.id}}/editar' role="button"><i class="fas fa-edit"></i></a> 
       <a  class="btn btn-danger" href='/{{item.id}}/eliminar' role="button"><i class="fas fa-trash-alt"></i></a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>